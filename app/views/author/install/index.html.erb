<div class="row">
    <div class="span12" style="text-align:center;">
        <h1>Welcome</h1>

        <p class="lead">Objective Blogging Platform</p>

        <p>Thank you for installing Objective. Just enter the information below and then sit back and relax.<br>
        You'll be blogging in no time.</p>
        <hr>
    </div>
</div>

<div class="row">
    <div class="span9 offset2">
    	<%= form_for [:author, @blog.metablog], :url => author_install_index_path, :html => { :class => "form-horizontal" } do |f| %>
            <p class="lead">Blog Information</p>

            <div class="control-group <%= "error" unless @blog.metablog.errors[:blog_name].empty? %>">
                <label class="control-label" for="blog_name">Blog Name:</label>

                <div class="controls">
                    <%= f.text_field :blog_name, :class => "span4", :placeholder => "Enter a name for your blog" %>
                    <%= ("<span class=\"help-inline\">%s</span>" % @blog.metablog.errors[:blog_name]).html_safe unless @blog.metablog.errors[:blog_name].empty? %>
                </div>
            </div>
            
            <div class="control-group <%= "error" unless @blog.metablog.errors[:blog_description].empty? %>">
                <label class="control-label" for="blog_description">Blog Tagline:</label>

                <div class="controls">
	                <%= f.text_field :blog_description, :class => "span4", :placeholder => "Every blog has a good tagline" %>
	                <%= ("<span class=\"help-inline\">%s</span>" % @blog.metablog.errors[:blog_description]).html_safe unless @blog.metablog.errors[:blog_description].empty? %>
                </div>
            </div>
            
            <div class="control-group <%= "error" unless @blog.metablog.errors[:blog_domain].empty? %>">
                <label class="control-label" for="blog_domain">Domain:</label>

                <div class="controls">
                    <%= f.text_field :blog_domain, :class => "span4", :placeholder => "http://objective.io" %>
                    <%= ("<span class=\"help-inline\">%s</span>" % @blog.metablog.errors[:blog_domain]).html_safe unless @blog.metablog.errors[:blog_domain].empty? %>
                </div>
            </div>

            <div class="span7" style="text-align:center; margin-top:30px;">
                <%= f.submit :class => "btn btn-large", :value => "Install" %>
            </div>
        <% end %>
    </div>
</div>
